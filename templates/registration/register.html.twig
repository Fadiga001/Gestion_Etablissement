{% extends 'base.html.twig' %}

{% block title %}Se connecter | Gestion des notes BTS/DTS{% endblock %}

{% block head %}


{% endblock %}


{% block body %}

<html lang="fr">
{% include 'home/head.html.twig' %}
<body class="hold-transition sidebar-mini layout-fixed">
<div class="wrapper">

  {% include 'home/navbar.html.twig' %}


   <div class="card border-info mb-4" style="max-width: 60rem; margin: auto;">
        <div class="card-header">
            <div class="row">

                <div class="col-md-2">

                        <a href="{{path('liste_users')}}" class="h2">
                            <i class="fa fa-arrow-circle-left" aria-hidden="true"></i>
                        </a>

                </div>

                <div class="col-md-6">
                    <h3 class="h3">
                         Inscription des utilisateurs
                    </h3>
                </div>       
            </div>  
        </div>
            <div class="card-body">

                <div class="container w-58">
                    {{ form_start(registrationForm) }}

                            <div class="form-row">
                                <div class="form-group">
                                    
                                    {{ form_row(registrationForm.typeUtilisateur) }}
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group mr-3">
                                
                                    {{ form_row(registrationForm.username) }}
                                </div>
                                <div class="form-group mr-3">
                                
                                    {{ form_row(registrationForm.nom) }}
                                </div>
                                <div class="form-group">
                                
                                {{ form_row(registrationForm.prenoms) }}
                                </div>
                            </div>
                            
                            <div class="form-group">
                                
                                {{ form_row(registrationForm.plainPassword, {
                                        label: 'Password'
                                    }) }}
                                
                            </div>

                            <div class="form-group">
                            
                                {{ form_row(registrationForm.telephone) }}
                            </div>
                            <div class="form-group">
                                
                                {{ form_row(registrationForm.email) }}
                            </div>
                            <div class="form-group">
                                
                                {{ form_row(registrationForm.imageFile) }}
                            </div>
                            <div class="form-submit">
                           

                                    <a class="btn btn-primary" href="#" data-toggle="modal" data-target="#exampleModal">
                                        Inscrire
                                    </a>
                                    <!-- Modal -->
                                    <div class="modal fade border-danger" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title text-success" id="exampleModalLabel">Inscription</h5>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    Voulez-vous inscrire cet utilisateur ?
                                                </div>
                                                <div class="modal-footer">
                                                    
                                                   <button type="submit" class="btn btn-primary my-3">Oui</button>

                                                    <a href="{{ path('app_register')}}">
                                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Non</button>
                                                    </a>

                                                
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                            </div>
                        
                        {{ form_end(registrationForm) }}
                </div>


                
            </div>
    </div>


</div>
  

</body>
{% include 'home/footer.html.twig' %}
</html>
    
{% endblock %}

