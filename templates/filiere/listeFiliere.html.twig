<!DOCTYPE html>
<html lang="fr">
{% include 'home/head.html.twig' %}

<body class="hold-transition sidebar-mini layout-fixed">
<div class="wrapper">

  {% include 'home/navbar.html.twig' %}

   <div class="container">

       {% include 'configuration/messageFlash.html.twig' %}


   <div class="card border-info" style="max-width: 80rem;">
        <div class="card-header">
            <div class="row">
                <div class="col-md-4">
                    <h3 class="h3">
                         GESTIONS DES FILIERES
                    </h3>
                </div>
                <div class="col-md-3">
                     <a href="{{ path('creerfiliere')}}" class="btn btn-warning">Créer une Filière</a>
                </div>
            </div>
           
            
        </div>
            <div class="card-body">

                 <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Code de la Filière</th>
                        <th scope="col">Dénomination</th>
                        <th scope="col">Actions</th>
    
                    </tr>
                </thead>
                <tbody>

                     {% for filiere in filiere %}

                        <tr>
                            <th>{{ filiere.codeFiliere}}</th>
                            <td>{{ filiere.denomination }}</td>
                            <td>
                                 <a class="btn btn-primary" href="{{ path('editerFiliere', {'denomination' : filiere.denomination}) }}">
                                    <i class="fa fa-pencil-square" aria-hidden="true"></i>
                                </a>

                                {% include 'configuration/btnDelete.html.twig' with {
                                    'btnDelete': 'fa fa-trash' ,
                                    'Text_Delete': 'SUPPRESSION',
                                    'SBody': 'Voulez-vous supprimer cette filière?',
                                    'path': "deleteFiliere",
                                    'param': {'denomination': filiere.denomination },
                                    'paths': 'liste_filiere'

                               }%}


                            </td>
                        </tr>
                
                    {% endfor %}
                     

                    
                     
                </tbody>
            </table>

                
            </div>
    </div>


   
  </div>

  

  </div>
</body>
</html>

{% include 'home/footer.html.twig' %}



