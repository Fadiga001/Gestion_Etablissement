<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title>Liste de classe</title>

    <style>
        .table{
          border-collapse: collapse;
          width: 700px
        }

        .th, .td{
          border: 1px solid black;
          padding: 8px;
         
        }

        .th{
          padding: 10px;
        }

        .nomEtPren{
          font-size: 13px;
        }


        .container{
          display: flex;
          justify-content: space-around;
        }

        span{
          text-align: right;
          margin-top: -5px
        }

       p{
        font-size: 10px;
        font-family: arial;
       }

      

      .trait{
        border: 1 solid black;
        margin-bottom: 10px;
      }


      .tab1{
        border-collapse: collapse;
        width: 700px;
      }

      .celAnnee{
        width: 200px;
      }
      .annee, .releve{
        text-align: center;
        border: 1 solid black;
      }


      .contenu{
        margin: 10px;
      }

      .mat, .nomProf{
        font-size: 15px;
        border: 1 solid black;
        text-align: center;
      }

      .mat{
        width: 55px;
      }
      .nomProf{
        width: 200px;
      }

    </style>
  </head>
  <body>
    
    <div class="container">
        <table class="tab1">
           
            <tbody>

              <tr>
                   <td class="celText">
                      <p>Groupe Ecole d'Ingénieur AGITEL FORMATION <br>
                      Titres et Diplomes accrédités pour le CAMES <br>
                      Membre de l'ACCSB</p>
                   </td>               
                   <td class="celAnnee">
                      <p class="annee">ANNEE ACADEMIQUE {{ annees.AnneeScolaire}} </p>
                   </td>               
              </tr>

            </tbody>
        </table>
    </div>

    <div class="trait"></div>


    <div class="container">
        <table class="tab1">
           
            <tbody>

              <tr>
                   <td class="contenu">
                      <h5>Classe: <u> {{ classe.codeClasse }} </u></h5>
                      <p>Cours du jour</p>
                   </td>               
                   <td class="celAnnee">
                      <h4 class="releve"> RELEVE DE NOTES </h4>
                   </td>               
              </tr>

            </tbody>
        </table>
    </div>

    <div class="">
      <p class="mat">Matière: </p>
      <p class="nomProf">Nom et Prénoms du Professeur: </p>
    </div>

      <div class="row">
        <table class="table table-hover">
                        <thead class="thead-dark">
                            <tr>
                                <th class="th" scope="col">N°</th>
                                <th class="th" scope="col">Nom et Prénoms</th>
                                <th class="th" colspan='3' scope="col">  Interro Ecrites</th>
                                <th class="th" colspan='3' scope="col">Devoirs Surveillés</th>
                                <th class="th" scope="col">Partiels</th>
                                <th class="th" scope="col">MOYENNE</th>
                                <th class="th" scope="col">Signature</th>
            
                            </tr>
                        </thead>
                        <tbody>

                            {% for etudiants in etudiants %}

                                <tr>
                                    <td class="td"> 
                                      
                                    </td>
                                    <td class="td"> <p class="nomEtPren"> {{ etudiants.etud.nom}} {{ etudiants.etud.prenoms}} ({{ etudiants.etud.dateNaissance | date('d/m/Y')}}) </p></td>
                                    <td class="td"></td>
                                    <td class="td"></td>
                                    <td class="td"></td>
                                    <td class="td"></td>
                                    <td class="td"></td>
                                    <td class="td"></td>
                                    <td class="td"></td>
                                    <td class="td"></td>
                                    <td class="td"></td>
                                    
                                </tr>
                        
                            {% endfor %}
                            

                            
                            
                        </tbody>
                    </table>
      </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  </body>
</html>




