<!DOCTYPE html>
<html lang="fr">
{% include 'home/head.html.twig' %}

<body class="hold-transition sidebar-mini layout-fixed">
<div class="wrapper">

  {% include 'home/navbar.html.twig' %}

   <div class="container">

     {% include 'configuration/messageFlash.html.twig' %}


   <div class="card border-info " style="max-width: 80rem;">
        <div class="card-header">
            <div class="row">
                <div class="col-md-4">
                    <h3 class="h3">
                         GESTIONS DES MATIERES
                    </h3>
                </div>
                <div class="col-md-3">
                     <a href="{{ path('creer_matieres')}}" class="btn btn-warning">Créer une nouvelle Matière</a>
                </div>
            </div>
           
            
        </div>
            <div class="card-body">

                <table class="table table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Dénomination</th>
                        <th scope="col">Professeurs</th>
                        <th scope="col">Coefficients</th>
                        <th scope="col">Type de matière</th>
                       
                        <th class="ms-5">Actions</th>
    
                    </tr>
                </thead>
                <tbody>

                     {% for mat in matieres %}

                        <tr>
                            <th>{{ mat.denomination | upper}}</th>
                            <td>{{ mat.prof | upper}}</td>
                            <td>{{ mat.coefficient | upper}}</td>
                            <td>{{ mat.TypeMatiere | upper}}</td>
                           
                            <td class="ms-4">
                                 <a class="btn btn-primary" href="{{ path('editer_matieres', {'denomination': mat.denomination} )}}">
                                    <i class="fa fa-pencil-square" aria-hidden="true"></i>
                                </a>

                                {% include 'configuration/btnDelete.html.twig' with {
                                    'btnDelete': 'fa fa-trash' ,
                                    'Text_Delete': 'SUPPRESSION',
                                    'SBody': 'Voulez-vous supprimer cette classe?',
                                    'path': "delete_matiere",
                                    'param': {'denomination': mat.denomination },
                                    'paths': 'liste_matieres'

                               }%}

                            </td>
                        </tr>
                
                    {% endfor %}
                     

                    
                     
                </tbody>
            </table>

                
            </div>
    </div>


   
  </div>

  

  </div>
</body>
</html>

{% include 'home/footer.html.twig' %}



