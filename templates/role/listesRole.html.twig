<!DOCTYPE html>
<html lang="fr">
{% include 'home/head.html.twig' %}

<body class="hold-transition sidebar-mini layout-fixed">
<div class="wrapper">

  {% include 'home/navbar.html.twig' %}

  <div class="container">

       {% include 'configuration/messageFlash.html.twig' %}


   <div class="card border-info" style="max-width: 80rem;">
        <div class="card-header">
            <div class="row">
                <div class="col-md-4">
                    <h3 class="h3">
                         Gestion des roles
                    </h3>
                </div>
                <div class="col-md-3">
                     <a href="{{ path('creer_role') }}" class="btn btn-warning">Cr√©er un nouveau role</a>
                </div>
            </div>
           
            
        </div>
            <div class="card-body">

                 <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Titre</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>

                    {% for roles in roles %}

                        <tr>
                            <th>{{ roles.title}}</th>
                            <td>

                                {% include 'configuration/btnDelete.html.twig' with {
                                    'btnDelete': 'fa fa-trash' ,
                                    'Text_Delete': 'SUPPRESSION',
                                    'SBody': 'Voulez-vous supprimer ce role?',
                                    'path': "delete_role",
                                    'param': {'id': roles.id },
                                    'paths': 'listes_roles',
                                    'pathEdit': 'editer_roles',
                                    'paraEdit': {'id': roles.id},

                               }%}              
                            </td>
                        </tr>
                
                    {% endfor %}
                     
                </tbody>
            </table>

                
            </div>
    </div>


   
  </div>

  

  </div>
</body>
</html>

