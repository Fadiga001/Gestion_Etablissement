<!DOCTYPE html>
<html lang="fr">
{% include 'home/head.html.twig' %}

<body class="hold-transition sidebar-mini layout-fixed">
<div class="wrapper">

  {% include 'home/navbar.html.twig' %}

   <div class="container">

    {% include 'configuration/messageFlash.html.twig' %}
    
   <div class="card border-info " style="max-width: 80rem;">
        <div class="card-header">
            <div class="row">
                <div class="col-md-4">
                    <h3 class="h3">
                         GESTIONS DES ETUDIANTS
                    </h3>
                </div>
                <div class="col-md-3">
                     <a href="{{ path('inscrire_etudiants')}}" class="btn btn-warning">Enregistrer un Etudiant</a>
                </div>
            </div>
           
            
        </div>
            <div class="card-body">
                <div class="row">
                     {% include 'configuration/searchBar.html.twig' with {recherche: form.search} %}
                </div>

                {% if app.request.method == 'POST' %}

                    {% if search | length == 0 %}

                        <div class="row text-center">
                            <h3>Aucun résultat pour votre recherche</h3>
                        </div>

                    {% else %}

                              <table class="table table-hover mb-5">
                                <thead class="thead-dark">
                                    <tr>
                                        <th scope="col">Nom</th>
                                        <th scope="col">Prénoms</th>
                                        <th scope="col">Matricule</th>
                                        <th scope="col">Classe</th>
                                    
                                        <th class="ms-5">Actions</th>
                    
                                    </tr>
                                </thead>
                                <tbody>
                                {% for search in search %}
                       
                                    <tr>
                                    <th>{{ search.nom | upper}}</th>
                                    <td>{{ search.prenoms | upper}}</td>
                                    <td>{{ search.matricule | upper}}</td>
                                    <td>{{ search.classe | upper}}  {{ search.filieres | upper}}</td>
                                
                                    <td class="ms-4">
                                        <a class="btn btn-primary" href="{{ path('details_etudiant', {'id': search.id}) }}">
                                            Détails
                                        </a>

                                    </td>
                                </tr>

                        {% endfor %}

                         </tbody>
                    </table>
                    {% endif %}
                {% else %}

                    <table class="table table-hover mb-5">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Nom</th>
                            <th scope="col">Prénoms</th>
                            <th scope="col">Matricule</th>
                            <th scope="col">Classe</th>
                        
                            <th class="ms-5">Actions</th>
        
                        </tr>
                    </thead>
                    <tbody>

                        {% for etudiant in etudiants %}

                            <tr>
                                <th>{{ etudiant.nom | upper}}</th>
                                <td>{{ etudiant.prenoms | upper}}</td>
                                <td>{{ etudiant.matricule | upper}}</td>
                                <td>{{ etudiant.classe | upper}}  {{ etudiant.filieres | upper}}</td>
                            
                                <td class="ms-4">
                                    <a class="btn btn-primary" href="{{ path('details_etudiant', {'id': etudiant.id}) }}">
                                        Détails
                                    </a>

                                </td>
                            </tr>
                    
                        {% endfor %}
                        

                        
                        
                    </tbody>
                </table>
            
            {% endif %}

           {% include 'configuration/pagination.html.twig' with {
                classe: etudiants,
                pagination : etudiants
            } %}
                
            </div>

            
    </div>


   
  </div>

  

  </div>
</body>
</html>

{% include 'home/footer.html.twig' %}



