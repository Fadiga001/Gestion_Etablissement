<!DOCTYPE html>
<html lang="fr">
{% include 'home/head.html.twig' %}

<body class="hold-transition sidebar-mini layout-fixed">
<div class="wrapper">

  {% include 'home/navbar.html.twig' %}

   <div class="container">

    {% include 'configuration/messageFlash.html.twig' %}
    
   <div class="card border-info mb-5">
        <div class="card-header">
            <div class="row">
                <div class="col-md-10">
                    <h3 class="h3">
                        IMPORTATION DE FICHIER CSV
                    </h3>
                </div>
            </div>
           
            
        </div>
            
            <div class="card-body">
                <div class="row">
                    <div class="col-md-7">
                        <h4 class="text-success">Veuillez d'abord importer le fichier CSV !</h4>
                    </div>
                    <div class="col-md-5">
                       {{ form_start(form, { attr: { 'accept-charset' : 'utf-8' }}) }}
                            <div class="form-row">
                                <div class="form-group mr-3">
                                    {{ form_label(form.upload_file) }}
                                    {{ form_widget(form.upload_file) }}
                                </div>
                                <div class="form-group mr-3">
                                    {{ form_widget(form.Importer, {'label': "Importer ce fichier", 'attr' : { 'class': 'btn btn-primary' }}) }}
                                </div>
                            </div>
                            {{ form_rest(form) }}
                        {{ form_end(form) }}
                    </div>
                </div>

                <div class="row">
                

                    
                </div>
                
            </div>

            
    </div>


   
  </div>

  

  </div>
</body>
</html>

