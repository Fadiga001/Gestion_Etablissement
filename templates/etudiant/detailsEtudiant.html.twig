{% block head %}


{% endblock %}


{% block body %}

<html lang="fr">
{% include 'home/head.html.twig' %}

<style>

    

</style>

<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">

        {% include 'home/navbar.html.twig' %}

          <div class="main-content">
                <div class="container">

                    {% include 'configuration/messageFlash.html.twig' %}

                    <h1 class="text-center mb-4">
                         <a href="{{path('liste_etudiants')}}" class="h2">
                            <i class="fa fa-arrow-circle-left" aria-hidden="true"></i>
                        </a>
                            DETAILS ETUDIANTS
                    </h1>
                   <div class="row">
                    <div class="col-sm-10 offset-sm-2 col-md-7 offset-md-3 col-lg-5 offset-lg-4">

                        <div class="profile-card card rounded-lg shadow p-4 p-xl-5 mb-4 text-center">
                            <div class="banner"></div>
                            <img src="{{ asset('/uploads/'~ etudiant.imageFile) }}" alt="" class="img-circle mx-auto mb-3" height="250" width="250">
                            <h5 class="mb-4"><a href="{{ path('edit_etudiant', {'id': etudiant.id})}}" class="btn btn-primary">Modifier</a></h5>
                            <h3 class="mb-4">{{ etudiant.nom }} {{ etudiant.prenoms }}</h3>
                            <div class="text-left mb-4">

                                <h4 class="text-warning">INFORMATIONS PERSONNELLES</h4>


                                <table class="table">
                                    <tbody>
                                        <tr>
                                            <th scope="row">MATRICULE</th>
                                            <td>{{ etudiant.matricule }}</td>
                                        </tr>
                                        <tr>
                                            <th scope="row">ANNEE SCOLAIRE</th>
                                            <td>{{ etudiant.anneeScolaire }}</td>
                                        </tr>
                    
                                        <tr>
                                            <th scope="row">DATE DE NAISSANCE</th>
                                            <td>{{ etudiant.dateNaissance|date('d-m-yy') }}</td>
                                        </tr>
                                        <tr>
                                            <th scope="row">GENRE</th>
                                            <td>{{ etudiant.sexe }}</td>
                                        </tr>
                                        <tr>
                                            <th scope="row">TELEPHONE</th>
                                            <td>{{ etudiant.telephone }}</td>
                                        </tr>
                                        <tr>
                                            <th scope="row">NATIONALITE</th>
                                            <td>{{ etudiant.nationalite }}</td>
                                        </tr>
                                         <tr>
                                            <th scope="row">DATE D'INSCRIPTION</th>
                                            <td>{{ etudiant.dateInscription|date('d-m-yy') }}</td>
                                        </tr>

                                        <tr>
                                            <th scope="row">ETABLISSEMENT DE PROVENANCE</th>
                                            <td>{{ etudiant.etablissementDeProvenance }}</td>
                                        </tr>
                                       
                                    </tbody>
                                </table>

                                <table class="table table-borderless">
                                    <tbody>
                                        <tr>
                                            <th scope="row" class="text-primary">{{ etudiant.classe }}</th>
                                        </tr>        
                                    </tbody>
                                </table>

                            </div>


                            <div class="text-left mb-4">
                                <h4 class="text-danger">EN CAS D'URGENCE</h4>
                                 <table class="table">
                    
                                    <tbody>
                                        <tr>
                                            <th scope="row">PERSONNE A CONTACTER</th>
                                            <td>{{ etudiant.personneAContacter }}</td>
                                        </tr>
                                        <tr>
                                            <th scope="row">ADRESSE DE LA PERSONNE A CONTACTER </th>
                                            <td>{{ etudiant.adresseDePersonneAContacter }}</td>
                                        </tr>
                                        <tr>
                                            <th scope="row">CONTACT DE LA PERSONNE A CONTACTER </th>
                                            <td>{{ etudiant.telephoneDePersonneAContacter }}</td>
                                        </tr>
                                    
                                    </tbody>
                                </table>
                                
                               
                            </div>

                        </div>

                    </div>
                   </div>
                </div>           
            </div>


    </div>
  

</body>
{% include 'home/footer.html.twig' %}
</html>
    
{% endblock %}

