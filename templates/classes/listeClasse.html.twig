<!DOCTYPE html>
<html lang="fr">
{% include 'home/head.html.twig' %}

<body class="hold-transition sidebar-mini layout-fixed">
<div class="wrapper">

  {% include 'home/navbar.html.twig' %}

   <div class="container">

       {% include 'configuration/messageFlash.html.twig' %}


   <div class="card border-info" style="max-width: 80rem;">
        <div class="card-header">
            <div class="row">
                <div class="col-md-4">
                    <h3 class="h3">
                         GESTIONS DES CLASSES
                    </h3>
                </div>
                <div class="col-md-3">
                     <a href="{{ path('creer_classes') }}" class="btn btn-warning">Créer une classe</a>
                </div>

                <div class="col-md-5">
                     <a href="{{ path('voir_classes') }}" class="btn btn-primary float-right">VOIR</a>
                </div>
            </div>
           
            
        </div>
        <div class="card-body">
        
                 <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Code de la classe</th>
                        <th scope="col">Dénomination</th>
                        <th scope="col">Filière</th>
                        <th scope="col">Actions</th>
    
                    </tr>
                </thead>
                <tbody>

                     {% for classe in classe %}

                    

                        <tr>
                            <th>{{ classe.codeClasse}}</th>
                            <td>{{ classe.denomination }}</td>
                            <td>{{ classe.filiere }}</td>
                            <td>
                    

                               {% include 'configuration/btnDelete.html.twig' with {
                                    'btnDelete': 'fa fa-trash' ,
                                    'Text_Delete': 'SUPPRESSION',
                                    'SBody': 'Voulez-vous supprimer cette classe?',
                                    'path': "delete_classe",
                                    'param': {'denomination': classe.denomination },
                                    'paths': 'liste_classes',
                                    'pathEdit': 'editer_classes',
                                    'paramEdit': {'denomination':  classe.denomination},

                               }%}


                            </td>
                        </tr>
                
                    {% endfor %}
                     

                    
                     
                </tbody>
            </table>

                
            </div>
    </div>


   
  </div>

  

  </div>
</body>
</html>

{% include 'home/footer.html.twig' %}





