            </div> 
            
        </div>
        <div class="card-body">

          <div class="container">
            <div class="row">
              <div class="col-md-4 text-center">
                <td><img src="{{ asset('dist/img/salle.jpg') }}" height="200" width="200" class="img-circle mx-auto mb-5"></td>
              </div>
              <div class="col-md-8 mt-5">

                  <h3> CLASSE : <strong class="text-primary">{{ classe.denomination }}  {{ classe.filiere }}</strong></h1>
                  <h3> EFFECTIF : <strong class="text-primary">{{ detail|length }}</strong></h1>

               
              </div>
            </div>
          </div>
           <div class="row mb-5">

                    {% if app.request.method == 'POST' %}
                      <div class="col-md-6 text-right">
                        {% include 'classes/modalbtnClasse.html.twig' with {
                          'button': 'Liste de la classe', 
                          'btn': 'btn btn-warning',
                          'messagesClasse': 'LISTE DE LA CLASSE'
                          
                          } %}
                      </div>

                      <div class="col-md-6 ">
                         {% include 'classes/modalBtnMatiere.html.twig' with {
                          'buttonMat': 'Liste des mati√®res',
                          'btn': 'btn btn-info',
                          'messagesMatiere': 'LISTE DES MATIERES'
                          
                          } %}
                      </div>
                    {% endif %}
          </div>


         
        </div>
    </div>

  </div>

  

  </div>
