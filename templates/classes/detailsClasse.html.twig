<!DOCTYPE html>
<html lang="fr">
{% include 'home/head.html.twig' %}

<body class="hold-transition sidebar-mini layout-fixed">
<div class="wrapper">

  {% include 'home/navbar.html.twig' %}

   <div class="container">

       {% include 'configuration/messageFlash.html.twig' %}


   <div class="card" >
        <div class="card-header">

           <div class="row">

                <div class="col-md-2">
                    <a href="{{path('voir_classes')}}" class="h2">
                        <i class="fa fa-arrow-circle-left" aria-hidden="true"></i>
                    </a>
                </div>
                <div class="col-md-5">
                    <h3 class="h3">
                        DETAILS DE LA CLASSE
                    </h3>
                </div> 

                <div class="col-md-5">
                    {{ form_start(searchForm) }}

                        <div class="form-row ">
                            <div class="form-group mr-5">
                                {{ form_widget(searchForm.annee) }}
                            </div>

                            <div class="form-submit mr-5">
