
<div class="modal fade" id="exampleModalToggle" aria-hidden="true" aria-labelledby="exampleModalToggleLabel" tabindex="-1">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        {% if buttonMat == 'Liste des matières' %}
            <h5 class="modal-title" id="exampleModalToggleLabel"> {{ messagesMatiere }} </h5>
        {% endif %}
        <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">

        {% if buttonMat == 'Liste des matières' %}

            {% if app.request.method == 'POST' %}
     
                <div class= "container">
                    {% if listeMatieres | length == 0 %}

                    <div class="row text-center">
                        <h3>Aucun résultat pour votre recherche</h3>
                    </div>

                    {% else %}

                    <div class="row">
                        <table class="table table-hover">
                            <thead class="thead-dark">

                                <tr>
                                    <th scope="col">Dénomination</th>
                                    <th scope="col">Actions</th>
                                </tr>

                            </thead>
                            <tbody>
                            {% for mat in listeMatieres %}
                                <tr>
                                    <th>{{ mat.mat.denomination | upper}}</th>
                                    <th>
                                            <a class="btn btn-secondary" href="#" >
                                                Consulter
                                            </a>
                                            <a class="btn btn-danger" href="{{ path('insertion_notes', {'idClasse': mat.id, 'idMat': mat.mat.id}) }}" >
                                                Inserer des notes
                                            </a>
                                    
                                    </th>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>

                    {% endif %}

                </div>
            {% endif %}


        {% endif %}

        
      </div>
     
    </div>
  </div>
</div>

<a class="{{btn}}" data-toggle="modal" href="#exampleModalToggle" role="button">{{buttonMat}}</a>