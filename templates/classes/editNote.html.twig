<!DOCTYPE html>
<html lang="fr">
{% include 'home/head.html.twig' %}

<body class="hold-transition sidebar-mini layout-fixed">
<div class="wrapper">

  {% include 'home/navbar.html.twig' %}

   <div class="container">

       {% include 'configuration/messageFlash.html.twig' %}


   <div class="card border-info" style="max-width: 80rem;">
        <div class="card-header">
            <div class="row">

                  <div class="col-md-2">
                      <a href="{{path('consulter_note', {'id': classe.id, 'idMat': matiere.id, 'matricule': mat.etudiants})}}" class="h2">
                          <i class="fa fa-arrow-circle-left" aria-hidden="true"></i>
                      </a>
                  </div>
                  <div class="col-md-10">
                      <h3 class="h3">
                          <span>MODIFICATION DE LA NOTE</span>
                      </h3>
                  </div> 
    
            </div> 
           
            
        </div>
        <div class="card-body">
                <div class="container mb-3">
                        <div class="jumbotron">
                            <div class="row">
                                <div class="col-md-6">
                                    <h3> Nom : {{etudiant.nom}}<h3>
                                    <h4> 
                                        Prénoms : {{etudiant.prenoms }}
                                    <h4>
                                    <h4> Matricule : {{etudiant.matricule}}</h4>
                                </div>
                                <div class="col-md-6">
                                    <h3>{{classe}}<h3>
                                    <h4> 
                                        Semestre : {{note.Semestre}}
                                        
                                    <h4>
                                    <h4> Matière : {{matiere}}</h4>
                                </div>
                            </div>
                            <div class="row mt-5 d-flex justify-content-center">
                                {{ form_start(form) }}
                                    <div class="form-row">
                                        <div class="form-group mr-4">
                                            {{form_widget(form.noteClasse, {'value': note.noteClasse})}}
                                        </div>
                                        <div class="form-group mr-4">
                                            {{form_widget(form.notePartiel, {'value': note.notePartiel})}}
                                        </div>
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-primary">Modifier</button> 
                                        </div>
                                    </div>
                                {{ form_end(form) }}

                            </div>
                        </div>
                    </div>
                       
        </div>
    </div>


   
  </div>

  

  </div>
</body>
</html>

