<!DOCTYPE html>
<html lang="fr">
{% include 'home/head.html.twig' %}

<style>
    #mat{
        border : none;
    }
</style>

<body class="hold-transition sidebar-mini layout-fixed">
  <div class="wrapper">

    {% include 'home/navbar.html.twig' %}

    <div class="container">

       {% include 'configuration/messageFlash.html.twig' %}


    <div class="card" >
        <div class="card-header">

            <div class="row">

                  <div class="col-md-2">
                      <a href="{{path('details_classes', {'id': classe.id, 'idMat': matiere.id})}}" class="h2">
                          <i class="fa fa-arrow-circle-left" aria-hidden="true"></i>
                      </a>
                  </div>
                  <div class="col-md-10">
                      <h3 class="h3">
                          NOTER LA CLASSE<span>-{{classe}}-{{matiere}}</span>
                      </h3>
                  </div> 
    
              </div> 
              
        </div>
        <div class="card-body">
            <form method="post">
                
                <table class="table table-hover mb-5">
                      <thead class="thead-dark">
                          <tr>
                              <th scope="col">Nom</th>
                              <th scope="col">Pr√©noms</th>
                              <th scope="col">Matricule</th>
                              <th scope="col">Note de Classe</th>
                              <th scope="col">Note de Partiel</th>
          
                          </tr>
                      </thead>
                      <tbody>

                          {% for etudiant in etudiant %}

                              <tr>
                                  <th>{{ etudiant.nom | upper}}</th>
                                  <td>{{ etudiant.prenoms | upper}}</td>
                                  <td>
                                        {{etudiant.matricule}}
                                  </td>
                                  <td>
                                        <div class="form-group">
                                            <input type="number" step="any"  id="noteClasse" name="noteClasse[]" class="form-control" placeholder="Donner une note sur 20">
                                        </div>
                                        
                                  </td>
                                  <td>
                                        <div class="form-group">
                                            <input type="number" step="any"  id="notePartiel" name="notePartiel[]" class="form-control" placeholder="Donner une note sur 20">
                                        </div>
                                        
                                  </td>
                              
                              </tr>
                      
                          {% endfor %}  
                          
                      </tbody>
                  </table>
                   <button type="submit" class="btn btn-primary">Valider</button>
                </form>
            </div>
      </div>

    </div>

  </div>
</body>
</html>

{% include 'home/footer.html.twig' %}





