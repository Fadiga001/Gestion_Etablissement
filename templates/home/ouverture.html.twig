<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Ouverture|Agitel-Formation</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <style>
        html, body{
          height: 100%;
          background-color: #222d32 ! important;
          font-family: "Roboto", sans-serif;
        }

        .global-container{
          height: 100%;
          display: flex;
          align-items: center;
          justify-content: center;
          color: #0db8de;
        }

        form{
          padding-top: 10px;
          font-size: 14px;
          margin-top: 30px;
        }

        .login-form{
          width: 400px;
          height: 300px;
          margin: 20px; 
          background: #1a2226 ! important;
          border-radius: 10px ! important;
          box-shadow: 10px red;
        }

        input[type="text"] {
          background: #1a2226;
          border: 2px solid #0db8de;
          border-radius: 10px;
          margin-bottom: 25px;
        }

        .card-title{
          font-weight: 900;
          padding-top: 20px;
          font-size: 30px;
        }

        .btn{
          background: #0db8de ! important;
          font-size: 14px;
          transform: translateY(10px);
          border-radius: 10px ! important;
        }

        
    </style>
  </head>
  <body>
    <div class="global-container">
      <div class="card login-form">
        <div class="card-body">
          <h1 class="card-title tet-center">Choisissez une année académique svp</h1>
          <div class="card-text">
            {{form_start(form)}}
              <div class="form-group">
                {{form_widget(form.AnneeScolaire)}}
              </div>
              <div class="form-group text-center mt-4">
                 <button class="btn btn-primary" type="submit"> Ouvrir </button>
              </div>
             
            {{form_end(form)}}
          </div>
        </div>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
  </body>
</html>