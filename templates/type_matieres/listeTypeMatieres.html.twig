<!DOCTYPE html>
<html lang="fr">
{% include 'home/head.html.twig' %}

<body class="hold-transition sidebar-mini layout-fixed">
<div class="wrapper">

  {% include 'home/navbar.html.twig' %}

   <div class="container">

    {% include 'configuration/messageFlash.html.twig' %}


   <div class="card border-info " style="max-width: 80rem;">
        <div class="card-header">
            <div class="row">
                <div class="col-md-6">
                    <h3 class="h3">
                         GESTIONS DES TYPES DE MATIERES
                    </h3>
                </div>
                <div class="col-md-3">
                     <a href="{{ path('creer_typeMatiere')}}" class="btn btn-warning">Créer un type de Matière</a>
                </div>
            </div>
           
            
        </div>
            <div class="card-body">

                 <table class="table table-hover text-center">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Dénomination</th>
                       
                        <th class="ms-5">Actions</th>
    
                    </tr>
                </thead>
                <tbody>

                     {% for mat in typeMat %}

                        <tr>
                            <th>{{ mat.denomination}}</th>
                           
                            <td class="ms-4">

                            {% include 'configuration/btnDelete.html.twig' with {
                                    'btnDelete': 'Supprimer' ,
                                    'Text_Delete': 'SUPPRESSION',
                                    'SBody': 'Voulez-vous supprimer ce role?',
                                    'path': "delete_typeMatiere",
                                    'param': {'denomination': mat.denomination},
                                    'paths': 'liste_typeMatiere',
                                    'pathEdit': 'editer_typeMatiere',
                                    'paramEdit': {'denomination': mat.denomination},

                               }%}          

                            </td>
                        </tr>
                
                    {% endfor %}
                     

                    
                     
                </tbody>
            </table>

                
            </div>
    </div>


   
  </div>

  

  </div>
</body>
</html>

{% include 'home/footer.html.twig' %}



