{% extends 'base.html.twig' %}

{% block title %}Se connecter | Gestion des notes BTS/DTS{% endblock %}

{% block head %}


{% endblock %}


{% block body %}

<html lang="fr">
{% include 'home/head.html.twig' %}
<body class="hold-transition sidebar-mini layout-fixed">
<div class="wrapper">

  {% include 'home/navbar.html.twig' %}


   <div class="card border-info mb-5" style="max-width: 40rem; margin: auto;">
        <div class="card-header">
        
            {% include 'configuration/btnRetour.html.twig' with {
                    'path': 'liste_typeMatiere', 
                    'text_header': ' CREATION D\'UN TYPE DE MATIERE'
                    
            
            } %}
           
        </div>
            <div class="card-body">

                <div class="container w-50">
                    {{ form_start(form) }}

                            <div class="form-row">
                                <div class="form-group">
                                    
                                    {{ form_row(form.codeTypeMatiere) }}
                                </div>
                            </div>
                            

                            <div class="form-group">

                                <div id="datepicker">
                                        {{ form_row(form.denomination) }}
                                </div>
                            
                            
                            </div>
                          
                            <div class="form-submit">
                           

                                    <a class="btn btn-primary" href="#" data-toggle="modal" data-target="#exampleModal">
                                        Valider
                                    </a>
                                    <!-- Modal -->
                                    <div class="modal fade border-danger" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title text-success" id="exampleModalLabel">Creation d'un nouveau type de matière</h5>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    Voulez-vous Créer un nouveau type de matière ?
                                                </div>
                                                <div class="modal-footer">
                                                    
                                                   <button type="submit" class="btn btn-primary my-3">Oui</button>

                                                    <a href="{{ path('liste_typeMatiere')}}">
                                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Non</button>
                                                    </a>

                                                
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                            </div>
                        
                        {{ form_end(form) }}
                </div>


                
            </div>
    </div>


</div>
  

</body>
{% include 'home/footer.html.twig' %}
</html>
    
{% endblock %}

